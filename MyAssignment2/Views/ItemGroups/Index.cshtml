@model IEnumerable<MyAssignment2.Models.Masters.ItemGroups>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Item Groups</h2>

<p>
    <div class="row pull-right">
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Create", "ItemGroups")'" style="margin-right: 15px;margin-bottom: 10px;" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-plus"> </i> New</button>
    </div>
</p>

<table class="table table-responsive table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemGroupName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemGroupName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemGroupId }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ItemGroupId }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ItemGroupId }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
